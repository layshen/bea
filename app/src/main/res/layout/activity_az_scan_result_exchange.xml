<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF111111">

    <com.hjq.bar.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="转账"
        app:layout_constraintTop_toTopOf="parent"
        app:leftBackground="#FF111111"
        app:rightBackground="#FF111111"
        app:titleColor="@color/white"
        app:leftIconTint="@color/white"
        app:lineVisible="false"
        android:background="#FF111111"
        />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="转账给个人"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="26dp"
        app:layout_constraintTop_toBottomOf="@id/title_bar"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        app:layout_constraintLeft_toLeftOf="@id/tv_desc"
        android:text="昵称****"
        android:textColor="@color/main_sub_text_color"
        android:layout_marginTop="12dp"
        android:textSize="@dimen/public_sub_text"
        />

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="26dp"
        android:src="@drawable/empty_avatar_user"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_desc"
        app:layout_constraintBottom_toBottomOf="@id/tv_nick"/>


    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_nick"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:qmui_backgroundColor="#FF191919"
        android:paddingTop="30dp"
        app:qmui_radiusTopLeft="12dp"
        app:qmui_radiusTopRight="12dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数值"
            android:textColor="@color/white"
            android:layout_marginLeft="26dp"
            android:textSize="@dimen/public_sub_text"
            />

        <com.hjq.widget.view.RegexEditText
            android:id="@+id/input_az"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextStyle"
            android:layout_marginTop="10dp"
            android:cursorVisible="true"
            android:layout_marginHorizontal="@dimen/dp_16"
            app:regexType="positive_decimal"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="@color/sk_card_line"
            android:layout_marginHorizontal="@dimen/dp_16"/>

        <Space
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="@color/sk_card_line"/>
        <!--键盘-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF1E1E1E"
            android:layout_marginBottom="10dp"
            android:padding="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/scan_pay_num_height"
                android:background="@drawable/bg_pay_number"
                android:layout_marginRight="@dimen/san_pay_num_margin"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/pay_num_text_size"
                android:clickable="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_2"
                android:text="1"/>

            <TextView
                android:id="@+id/tv_2"
                android:textSize="@dimen/pay_num_text_size"
                android:layout_width="0dp"
                android:layout_height="@dimen/scan_pay_num_height"
                android:clickable="true"
                android:background="@drawable/bg_pay_number"
                android:layout_marginRight="@dimen/san_pay_num_margin"
                android:textColor="@color/white"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_1"
                app:layout_constraintRight_toLeftOf="@id/tv_3"
                android:text="2"/>

            <TextView
                android:id="@+id/tv_3"
                android:textSize="@dimen/pay_num_text_size"
                android:layout_width="0dp"
                android:layout_height="@dimen/scan_pay_num_height"
                android:layout_marginRight="@dimen/san_pay_num_margin"
                android:textColor="@color/white"
                android:gravity="center"
                android:clickable="true"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/bg_pay_number"
                app:layout_constraintLeft_toRightOf="@id/tv_2"
                app:layout_constraintRight_toLeftOf="@id/fl_del"
                android:text="3"/>

            <FrameLayout
                android:id="@+id/fl_del"
                app:layout_constraintTop_toTopOf="@id/tv_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/scan_pay_num_height"
                android:clickable="true"
                app:layout_constraintLeft_toRightOf="@id/tv_3"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/bg_pay_number">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_pay_del"/>
            </FrameLayout>


            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textSize="@dimen/pay_num_text_size"
                android:text="付款"
                android:gravity="center"
                android:background="@drawable/bg_pay_btn"
                app:layout_constraintTop_toTopOf="@id/tv_4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/fl_del"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="0dp"
                android:textSize="@dimen/pay_num_text_size"
                android:layout_height="@dimen/scan_pay_num_height"
                android:background="@drawable/bg_pay_number"
                android:textColor="@color/white"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_5"
                app:layout_constraintTop_toBottomOf="@id/tv_1"
                android:layout_marginTop="@dimen/san_pay_num_margin"
                android:layout_marginRight="@dimen/san_pay_num_margin"
                android:text="4"/>

            <TextView
                android:id="@+id/tv_5"
                android:textSize="@dimen/pay_num_text_size"
                android:layout_width="0dp"
                android:layout_height="@dimen/scan_pay_num_height"
                android:background="@drawable/bg_pay_number"
                android:layout_marginRight="@dimen/san_pay_num_margin"
                android:textColor="@color/white"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/tv_4"
                app:layout_constraintLeft_toRightOf="@id/tv_4"
                app:layout_constraintRight_toLeftOf="@id/tv_6"
                android:text="5"/>

            <TextView
                android:id="@+id/tv_6"
                android:textSize="@dimen/pay_num_text_size"
                android:layout_width="0dp"
                android:layout_height="@dimen/scan_pay_num_height"
                android:layout_marginRight="@dimen/san_pay_num_margin"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/bg_pay_number"
                app:layout_constraintTop_toTopOf="@id/tv_4"
                app:layout_constraintLeft_toRightOf="@id/tv_5"
                app:layout_constraintRight_toLeftOf="@id/tv_pay"
                android:text="6"/>

            <TextView
                android:id="@+id/tv_7"
                android:textSize="@dimen/pay_num_text_size"
                android:layout_width="0dp"
                android:layout_height="@dimen/scan_pay_num_height"
                android:background="@drawable/bg_pay_number"
                android:gravity="center"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_8"
                app:layout_constraintTop_toBottomOf="@id/tv_4"
                android:layout_marginTop="@dimen/san_pay_num_margin"
                android:layout_marginRight="@dimen/san_pay_num_margin"
                android:text="7"/>

            <TextView
                android:id="@+id/tv_8"
                android:textSize="@dimen/pay_num_text_size"
                android:layout_width="0dp"
                android:layout_height="@dimen/scan_pay_num_height"
                android:background="@drawable/bg_pay_number"
                android:layout_marginRight="@dimen/san_pay_num_margin"
                android:gravity="center"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@id/tv_7"
                app:layout_constraintLeft_toRightOf="@id/tv_7"
                app:layout_constraintRight_toLeftOf="@id/tv_9"
                android:text="8"/>

            <TextView
                android:id="@+id/tv_9"
                android:textSize="@dimen/pay_num_text_size"
                android:layout_width="0dp"
                android:layout_height="@dimen/scan_pay_num_height"
                android:layout_marginRight="@dimen/san_pay_num_margin"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/bg_pay_number"
                app:layout_constraintTop_toTopOf="@id/tv_7"
                app:layout_constraintLeft_toRightOf="@id/tv_8"
                app:layout_constraintRight_toLeftOf="@id/tv_pay"
                android:text="9"/>

            <TextView
                android:id="@+id/tv_0"
                android:layout_width="0dp"
                android:layout_height="@dimen/scan_pay_num_height"
                android:background="@drawable/bg_pay_number"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/tv_8"
                app:layout_constraintTop_toBottomOf="@id/tv_7"
                android:layout_marginTop="@dimen/san_pay_num_margin"
                android:gravity="center"
                android:text="0"/>

            <TextView
                android:id="@+id/tv_point"
                android:layout_width="0dp"
                android:layout_height="@dimen/scan_pay_num_height"
                android:background="@drawable/bg_pay_number"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="@id/tv_9"
                app:layout_constraintRight_toLeftOf="@id/tv_pay"
                app:layout_constraintTop_toTopOf="@id/tv_0"
                android:layout_marginRight="@dimen/san_pay_num_margin"
                android:gravity="center"
                android:text="."/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>